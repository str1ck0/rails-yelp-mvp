<h1>New Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
<div class="form-inputs">
  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5) %>
</div>
  <%= f.submit "Add Review", class: "btn btn-primary" %>
<% end %>
<br>

<div>
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
